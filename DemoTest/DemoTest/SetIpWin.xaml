<Window x:Class="DemoTest.SetIpWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoTest"
        mc:Ignorable="d"
        Title="SetIpWin" Height="210" Width="620">

    <DataGrid x:Name="dataGridView" Margin="0,0,0,0" AutoGenerateColumns="False" SelectionChanged="dataGridView_SelectionChanged" RowHeight="40">
        <DataGrid.Columns>
            <DataGridTextColumn Header="Select" Width="60"  Binding="{Binding SelectNum}" IsReadOnly="True"/>
            <DataGridTextColumn Header="IP Addr" Width="100" Binding="{Binding IPAddr}" IsReadOnly="True"/>
            <DataGridTextColumn Header="MAC Addr" Width="100" Binding="{Binding MACAddr}" IsReadOnly="True"/>
            <DataGridTextColumn Header="Name" Width="350" Binding="{Binding AdapterName}" IsReadOnly="True"/>
        </DataGrid.Columns>
    </DataGrid>


</Window>

