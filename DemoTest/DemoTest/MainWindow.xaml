<Window
    x:Class="DemoTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DemoTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:src="clr-namespace:DemoTest"
    Title="DempTest"
    Width="1280"
    Height="720"
    mc:Ignorable="d">
    <StackPanel Margin="0,0,2,-1">
        <ToolBar x:Name="toolBar" Height="35" />
        <StackPanel Height="620" Orientation="Horizontal">
            <Grid Height="620" Margin="0,0,1150,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0*" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Label
                    x:Name="label"
                    Grid.ColumnSpan="2"
                    Height="43"
                    Margin="0,120,0,457"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Content="  Maintenance"
                    RenderTransformOrigin="0.55,-0.577" />
                <Image
                    x:Name="image1"
                    Grid.ColumnSpan="2"
                    Height="120"
                    VerticalAlignment="Top" />
                <Label
                    x:Name="label1"
                    Grid.ColumnSpan="2"
                    Margin="0,288"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Content="Update"
                    RenderTransformOrigin="0.625,1.115" />
                <Image
                    x:Name="image"
                    Grid.ColumnSpan="2"
                    Height="131"
                    Margin="60,424,60,65"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    RenderTransformOrigin="0.5,1.09" />
                <Image
                    x:Name="image2"
                    Grid.ColumnSpan="2"
                    Height="120"
                    Margin="0,168,0,0"
                    VerticalAlignment="Top" />
            </Grid>
        </StackPanel>
        <StatusBar Height="35" />
    </StackPanel>
</Window>
